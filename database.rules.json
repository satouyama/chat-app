{
  "rules": {
    ".read": "auth != null",
    ".write": "auth != null",
    "users": {
      ".read": true,
      ".write": true,
      ".indexOn": [
        "username",
        "name"
      ]
    },
    "chats": {
      ".indexOn": "timestamp"
    },
    "messages": {
      "$messages_list_id": {
        ".indexOn": "timestamp"
      }
    }
  }
}
